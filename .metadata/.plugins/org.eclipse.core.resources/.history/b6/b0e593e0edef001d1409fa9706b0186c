package ejercicio;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Arrays;
import java.util.List;

import model.Artista;

public class Programa {

	public static void main(String[] args) {
		Artista a1 = new Artista("Metallica", 100000, "Cuba");
		Artista a2 = new Artista("Iron maiden", 200000, "Puerto Rico");
		Artista a3 = new Artista("Slayer", 50000, "Venezuela");
		Artista a4 = new Artista("Megadeth", 100200, "California");
		Artista a5 = new Artista("Motorhead", 9999999, "Inglaterra");
		
		List<Artista> artistas= Arrays.asList(a1,a2,a3,a4,a5);
		
		String rutaSalida = "src\\ejercicio14\\salidaSpotify.txt";
		try {
			File archivoSalida = new File(rutaSalida);
			if (!archivoSalida.exists()) {
				archivoSalida.createNewFile();
			}
			FileWriter fw = new FileWriter(archivoSalida);
			BufferedWriter bw = new BufferedWriter(fw);
			bw.write("PROGRAMA DE SPOTIFY\n\n");
			for(Artista a: artistas) {
				bw.write("\nNombre del artista: "+nombre);
				bw.write("\nPeso: "+peso);
				bw.write("\nTipos: "+tipos);
				bw.write("\n--------------------------------------------------");
			}
		}
		catch(IOException io) {
			
		}
	}
}
